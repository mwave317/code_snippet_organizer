<!doctype html>
    <html>
      <head>
        <title>Register</title>
        <link rel="stylesheet" href="../css/styles.css">
        <meta charset="utf-8">
      </head>
        <body>
          <section class="signup">
          <form method="post" action="/signup">
              <label for="username">Username: </label>
            <input type="text" name="username" id="username" placeholder="Enter your username">
              <label for="password">Password: </label>
            <input type="password" name="password" id="password" placeholder="Enter your password">
              <label for="reenterPassword">Re-enter Password: </label>
            <input type="password" name="reenterPassword" id="reenterPassword" placeholder="Enter your password">
              <label for="first_name">First Name: </label>
            <input type="text" name="first_name" id="first_name" placeholder="Enter your first name">
              <label for="last_name">Last Name: </label>
            <input type="text" name="last_name" id="last_name" placeholder="Enter your last name">
              <label for="city">City: </label>
            <input type="text" name="city" id="city" placeholder="Enter a city">
            <label for="states">States: </label>
            <select name="states" size="1">
            {{#states}}<option value="{{value}}">{{state}}</option>{{/states}}
            </select>
            <input type="submit" value="submit">
          </form>
        </section>
        </body>
   <html>
